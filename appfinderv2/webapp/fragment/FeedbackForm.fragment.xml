        </VBox>
        <endButton>
            <Button text="{i18n>skip}" press="onPressSkip">
                <customData>
                    <core:CustomData key="path" value="/AssignApps" />
                    <core:CustomData key="tableId" value="reviewSmartTable" />
                </customData>
            </Button>
        </endButton>
        <beginButton>
            <Button text="{i18n>submitFeedback}" type="Emphasized" press="onPressSubmitFeedback" >
                <customData>
                    <core:CustomData key="IsFeedback" value="true" />
                    <core:CustomData key="path" value="/AssignApps" />
                    <core:CustomData key="tableId" value="reviewSmartTable" />
                </customData>
            </Button>
        </beginButton>
    </Dialog>
