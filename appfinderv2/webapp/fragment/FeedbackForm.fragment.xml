<core:FragmentDefinition 	
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m" >
    <Dialog title ="{i18n>feedbackForm}"  busyIndicatorDelay="0" class="sapUiSizeCompact" escapeHandler=".handleEscape">
        <VBox class="sapUiSmallMargin">
            <Label wrapping="true" text="{i18n>feedbackTooltip}" />
            <Text class="sapUiMediumMarginTop" text="{i18n>scale}" />
            <RadioButtonGroup class="sapUiTinyMarginTop" columns="5" selectedIndex="{LocalModel>/Rating}" valueState="{LocalModel>/RatingVS}">
                <RadioButton text="1" />
                <RadioButton class="sapUiMediumMarginBegin" text="2" />
                <RadioButton class="sapUiMediumMarginBegin" text="3" />
                <RadioButton class="sapUiMediumMarginBegin" text="4" />
                <RadioButton class="sapUiMediumMarginBegin" text="5" />
		    </RadioButtonGroup>
            <Text class="sapUiMediumMarginTop" text="{i18n>useful}" />
            <RadioButtonGroup class="sapUiTinyMarginTop" selectedIndex="{LocalModel>/Useful}" valueState="{LocalModel>/UsefulVS}">
                <RadioButton text="{i18n>veryUseful}" select="onSelectUseful" >
                    <customData>
                        <core:CustomData key="key" value="100" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>moderatelyUseful}" select="onSelectUseful">
                    <customData>
                        <core:CustomData key="key" value="50" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>someUseful}" select="onSelectUseful">
                    <customData>
                        <core:CustomData key="key" value="25" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>notUseful}" select="onSelectUseful">
                    <customData>
                        <core:CustomData key="key" value="0" ></core:CustomData>
                    </customData>
                </RadioButton>
		    </RadioButtonGroup>
            <Text class="sapUiMediumMarginTop" text="{i18n>wouldYouAgree}" />
            <RadioButtonGroup class="sapUiTinyMarginTop" selectedIndex="{LocalModel>/Agree}" valueState="{LocalModel>/AgreeVS}">
                <RadioButton text="{i18n>sAgree}" select="onSelectAgree">
                    <customData>
                        <core:CustomData key="key" value="100" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>agree}" select="onSelectAgree">
                    <customData>
                        <core:CustomData key="key" value="50" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>disagree}" select="onSelectAgree">
                    <customData>
                        <core:CustomData key="key" value="25" ></core:CustomData>
                    </customData>
                </RadioButton>
                <RadioButton text="{i18n>sDisagree}" select="onSelectAgree">
                    <customData>
                        <core:CustomData key="key" value="0" ></core:CustomData>
                    </customData>
                </RadioButton>
		    </RadioButtonGroup>
            <Text class="sapUiMediumMarginTop" text="{i18n>comment1}" />
			<TextArea width="100%" class="sapUiTinyMarginTop" placeholder="{i18n>typeAnswer}" value="{LocalModel>/comment1}" />
            <Text class="sapUiMediumMarginTop" text="{i18n>comment2}" />
			<TextArea width="100%" class="sapUiTinyMarginTop" placeholder="{i18n>typeAnswer}" value="{LocalModel>/comment2}" />
            <Text class="sapUiMediumMarginTop" text="{i18n>comment3}" />
			<TextArea width="100%" class="sapUiTinyMarginTop" placeholder="{i18n>typeAnswer}" value="{LocalModel>/comment3}" />
