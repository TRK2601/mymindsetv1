<core:FragmentDefinition 	
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m" >
    <Dialog title ="{i18n>variant}" contentWidth="22em" busyIndicatorDelay="0" class="sapUiSizeCompact" escapeHandler=".handleEscape">
        <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="{i18n>name}" required="true" />
				<Input value="{LocalModel>/variantName}" 
                    enabled="{LocalModel>/variantNameEnabled}"
                    valueState="{LocalModel>/variantNameValueSate}"/>
			</f:content>
		</f:SimpleForm>
        <beginButton>
            <Button text="{LocalModel>/SelVarAction}" type="Accept" press="onSaveOrUpdateVariant" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" type="Reject" press="closeVariantDlg" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>