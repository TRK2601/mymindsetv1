<ActionSheet id="actionSheet"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	placement="Bottom">
	<Button
		text="{i18n>view}"
		icon="sap-icon://show"
		press="onValueHelpRequest">
        <customData>
            <core:CustomData key="vhProp" value="DisplayVariant" />
        </customData>
    </Button>
	<Button
		text="{i18n>save}"
		icon="sap-icon://save"
		press="onPressSaveOrUpdateVar" >
        <customData>
            <core:CustomData key="variantAction" value="Save" />
        </customData>
    </Button>
