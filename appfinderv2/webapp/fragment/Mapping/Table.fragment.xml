<core:FragmentDefinition 	
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:ui="sap.ui.table"
	xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:tnt="sap.tnt"
	xmlns="sap.m" >
    <smartTable:SmartTable id="MapTbl" class="sapUiSmallMargin" busyIndicatorDelay="0" entitySet="InputFilterParam" tableBindingPath="LocalModel>/AssignApps" tableType="Table" showTablePersonalisation="true" useVariantManagement="false"
        initialNoDataText="{i18n>initNoData}" ignoredFields="InpFilterValue" persistencyKey="mappingSmartTable" enableAutoBinding="false"
        showRowCount="false" showFullScreenButton="true" useExportToExcel="false">
        <smartTable:customToolbar>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Mass Configuration" enabled="{LocalModel>/massConfigBtlEnabe}" press="onPressMassConfig" />
            </OverflowToolbar>
        </smartTable:customToolbar>
        <ui:Table selectionMode="MultiToggle" visibleRowCountMode="Auto" selectionBehavior="Row" rowSelectionChange="onMappingTblSelChange" >
            <ui:rowSettingsTemplate>
                <ui:RowSettings highlight="{= ${LocalModel>ValueState} ? ${LocalModel>ValueState} : 'None'}" />
            </ui:rowSettingsTemplate>
            <ui:columns>
                <ui:Column width="6em">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "TCode", "columnIndex":"0", "filterProperty": "TCode", "sortProperty": "TCode", "type":"string", "leadingProperty": "TCode"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>tCode}"/>
                    <ui:template>
                        <Text text="{LocalModel>TCode}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="6em" filterProperty="appId" sortProperty="appId">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "appId", "columnIndex":"1", "filterProperty": "appId", "sortProperty": "appId", "type":"string", "leadingProperty": "appId"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>appID}"/>
                    <ui:template>
                        <Text text="{LocalModel>appId}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" hAlign="Begin" filterProperty="AppName" sortProperty="AppName">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "AppName", "columnIndex":"2", "filterProperty": "AppName", "sortProperty": "AppName", "type":"string", "leadingProperty": "AppName"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>appName}"/>
                    <ui:template>
                        <Link target="_blank" href="{LocalModel>AppLink}" text="{LocalModel>AppName}" tooltip="{LocalModel>AppLink}" />
                    </ui:template>
                </ui:Column>
                <ui:Column hAlign="Begin" width="12em" filterProperty="roleDesc" sortProperty="roleDesc">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "roleDesc", "columnIndex":"3", "filterProperty": "roleDesc", "sortProperty": "roleDesc", "type":"string", "leadingProperty": "roleDesc"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>colRole}"/>
                    <ui:template>
                        <Input width="100%" valueHelpRequest="onValueHelpRequest" value="{LocalModel>roleDesc}" showValueHelp="true" valueHelpOnly="true">
                            <customData>
                                <core:CustomData key="vhProp" value="role" ></core:CustomData>
                            </customData>
                        </Input>
                    </ui:template>
                </ui:Column>
                <ui:Column hAlign="Begin" width="12em" filterProperty="catDesc" sortProperty="catDesc">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "catDesc", "columnIndex":"4", "filterProperty": "catDesc", "sortProperty": "catDesc", "type":"string", "leadingProperty": "catDesc"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>colCat}"/>
                    <ui:template>
                        <Input width="100%" valueHelpRequest="onValueHelpRequest" value="{LocalModel>catDesc}" editable="{= ${LocalModel>IsCatEnabled} ? true : false}" showValueHelp="true" valueHelpOnly="true">
                            <customData>
                                <core:CustomData key="vhProp" value="catalog" ></core:CustomData>
                            </customData>
                        </Input>
                    </ui:template>
                </ui:Column>
                <ui:Column hAlign="Begin" width="12em" filterProperty="groupDesc" sortProperty="groupDesc">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "groupDesc", "columnIndex":"5", "filterProperty": "groupDesc", "sortProperty": "groupDesc", "type":"string", "leadingProperty": "groupDesc"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>colGroup}"/>
                    <ui:template>
                        <Input width="100%" valueHelpRequest="onValueHelpRequest" value="{LocalModel>groupDesc}" editable="{= ${LocalModel>IsGrpEnabled} ? true : false}" showValueHelp="true" valueHelpOnly="true">
                            <customData>
                                <core:CustomData key="vhProp" value="group" ></core:CustomData>
                            </customData>
                        </Input>
                    </ui:template>
                </ui:Column>


                <ui:Column width="16em" filterProperty="RoleName" visible="false" sortProperty="RoleName">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "RoleName", "columnIndex":"6", "filterProperty": "RoleName", "sortProperty": "RoleName", "type":"string", "leadingProperty": "RoleName"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>role}"/>
                    <ui:template>
                        <Text text="{LocalModel>RoleName}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="6em" hAlign="Center" visible="false" filterProperty="Lighthouse" >
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "Lighthouse", "columnIndex":"7", "filterProperty": "Lighthouse", "type":"boolean", "leadingProperty": "Lighthouse"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>lighthouse}"/>
                    <ui:template>
                        <core:Icon color="{= ${LocalModel>Lighthouse} ? '#168282':'#C14646'}" size="1.4em" src="sap-icon://BusinessSuiteInAppSymbols/icon-lighthouse" tooltip="{= ${LocalModel>Lighthouse} ? 'Yes':'No'}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="30em" hAlign="Center" visible="false" filterProperty="GTMLoBName" sortProperty="GTMLoBName">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "GTMLoBName", "columnIndex":"8", "filterProperty": "GTMLoBName", "sortProperty": "GTMLoBName", "type":"string", "leadingProperty": "GTMLoBName"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>funcArea}"/>
                    <ui:template>
                        <l:HorizontalLayout class="sapUiTinyMarginTop" allowWrapping="true" content="{LocalModel>LoB}">
                            <tnt:InfoLabel class="sapUiTinyMarginBegin" text="{LocalModel>FA}" colorScheme="7"/>
                        </l:HorizontalLayout>
                    </ui:template>
                </ui:Column>
                <ui:Column width="15em" visible="false" filterProperty="BusinessRole" sortProperty="BusinessRole">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "BusinessRole", "columnIndex":"9", "filterProperty": "BusinessRole", "sortProperty": "BusinessRole", "type":"string", "leadingProperty": "BusinessRole"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>businessRole}"/>
                    <ui:template>
                        <Text text="{LocalModel>BusinessRole}"/>
                    </ui:template>
                </ui:Column>
                
                <ui:Column width="15em" visible="false" filterProperty="UITechnology" sortProperty="UITechnology">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "UITechnology", "columnIndex":"11", "filterProperty": "UITechnology", "sortProperty": "UITechnology", "type":"string", "leadingProperty": "UITechnology"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>uiTech}"/>
                    <ui:template>
                        <Text text="{LocalModel>UITechnology}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="15em" visible="false" filterProperty="BSPName" sortProperty="BSPName">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "BSPName", "columnIndex":"12", "filterProperty": "BSPName", "sortProperty": "BSPName", "type":"string", "leadingProperty": "BSPName"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>ui5TechName}"/>
                    <ui:template>
                        <Text text="{LocalModel>BSPName}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" visible="false" filterProperty="oDataSrv" sortProperty="oDataSrv">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "oDataSrv", "columnIndex":"13", "filterProperty": "oDataSrv", "sortProperty": "oDataSrv", "type":"string", "leadingProperty": "oDataSrv"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>oDataSrvs}"/>
                    <ui:template>
                        <Text text="{LocalModel>oDataSrv}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" visible="false" filterProperty="TargetMapping" sortProperty="TargetMapping">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "TargetMapping", "columnIndex":"14", "filterProperty": "TargetMapping", "sortProperty": "TargetMapping", "type":"string", "leadingProperty": "TargetMapping"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>targetMapping}"/>
                    <ui:template>
                        <Text text="{LocalModel>TargetMapping}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" visible="false" filterProperty="TechnicalCatalog" sortProperty="TechnicalCatalog">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "TechnicalCatalog", "columnIndex":"15", "filterProperty": "TechnicalCatalog", "sortProperty": "TechnicalCatalog", "type":"string", "leadingProperty": "TechnicalCatalog"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>technicalCatalog}"/>
                    <ui:template>
                        <Text text="{LocalModel>TechnicalCatalog}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" visible="false" filterProperty="BusinessCatalog" sortProperty="BusinessCatalog">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "BusinessCatalog", "columnIndex":"16", "filterProperty": "BusinessCatalog", "sortProperty": "BusinessCatalog", "type":"string", "leadingProperty": "BusinessCatalog"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>businessCatalog}"/>
                    <ui:template>
                        <Text text="{LocalModel>BusinessCatalog}"/>
                    </ui:template>
                </ui:Column>
                <ui:Column width="20em" visible="false" filterProperty="BusinessGroup" sortProperty="BusinessGroup">
                    <ui:customData>
                        <core:CustomData key="p13nData"
                            value='\{"columnKey": "BusinessGroup", "columnIndex":"17", "filterProperty": "BusinessGroup", "sortProperty": "BusinessGroup", "type":"string", "leadingProperty": "BusinessGroup"}'/>
                    </ui:customData>
                    <Label design="Bold" text="{i18n>businessGroup}"/>
                    <ui:template>
                        <Text text="{LocalModel>BusinessGroup}"/>
                    </ui:template>
                </ui:Column>
            </ui:columns>
        </ui:Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>