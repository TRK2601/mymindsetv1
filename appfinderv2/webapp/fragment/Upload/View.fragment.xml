<core:FragmentDefinition 	
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
	xmlns="sap.m" >
    <!-- <Page id="mainPage" showHeader="false" floatingFooter="true" busyIndicatorDelay="0" visible="{= ${LocalModel>/showPage}}"> -->
    <VBox id="uploadPage" busyIndicatorDelay="0">
		<form:SimpleForm id="SimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			ariaLabelledBy="Title1" >
			<form:content>
                <!-- MER-177 -->
                <Label design="Bold" text="{i18n>customerName}" required="true"/>
                <Input value= "{LocalModel>/customerName}" width="60%"/>
				<Label design="Bold" text="{i18n>chooseFrom}" />
                <Select selectedKey="{LocalModel>/chooseFromOption}" change="onChangeChooseSel">
                    <core:Item key="M" text="{i18n>manual}"/>
                    <core:Item key="U" text="{i18n>upload}"/>
                    <core:Item key="ST" text="{i18n>sto3upload}"/>
                    <core:Item key="V" text="{i18n>variant}"/>
                    <layoutData>
                        <l:GridData span="XL3 L3 M3 S12" />
                    </layoutData>
                </Select>
                <Label design="Bold" text="{i18n>chooseVersion}" />
                <Input value="{LocalModel>/releaseName} - {LocalModel>/releaseId}" valueHelpOnly="true" visible="{= ${LocalModel>/chooseFromOption} === 'V' ? false : true}" showValueHelp="true"  valueHelpRequest="onValueHelpRequest">
                    <customData>
                        <core:CustomData key="vhProp" value="Version" />
                    </customData>
                    <layoutData>
                        <l:GridData span="XL3 L3 M3 S12" />
                    </layoutData>
                </Input>
                <Label design="Bold" required="true" text="{i18n>variant}" />
                <Input value="{LocalModel>/oSelVariant/name}" valueHelpOnly="true" visible="{= ${LocalModel>/chooseFromOption} === 'V' ? true : false}" showValueHelp="true"  valueHelpRequest="onValueHelpRequest">
                    <customData>
                        <core:CustomData key="vhProp" value="DisplayVariant" />
                    </customData>
                    <layoutData>
                        <l:GridData span="XL3 L3 M3 S12" />
                    </layoutData>
                </Input>
                <!-- <RadioButtonGroup columns="3"  select="onSelectRdBtn">
                    <buttons>
                        <RadioButton text="{i18n>manual}"/>
                        <RadioButton class="sapUiTinyMarginBegin" text="{i18n>upload}"/>
                            <RadioButton class="sapUiTinyMarginBegin" text="{i18n>sto3upload}"/>
                    </buttons>
                </RadioButtonGroup> -->
                <Label design="Bold" required="true" text="{i18n>chooseFile}"/>
                <u:FileUploader value="{LocalModel>/File}" id="idFileUploader" useMultipart="false" sameFilenameAllowed="true" fileType="CSV,csv,xlsx,XLSX" visible="{= ${LocalModel>/chooseFromOption} === 'U' || ${LocalModel>/chooseFromOption} === 'ST' ? true : false}"
                            icon="sap-icon://upload" sendXHR="true" iconFirst="true" typeMissmatch="onFileTypeMissMatch" style="Emphasized" change="onChangeUpload" uploadComplete="onUploadComplete">
                </u:FileUploader>
                <Link text="Download Template" press="onDownloadTemp" visible="{= ${LocalModel>/chooseFromOption} === 'U' ? true : false}"/>
                <Label design="Bold" text="{i18n>TCodes}" required="true" />
                <TextArea rows="4" value="{LocalModel>/PastedTcodes}" liveChange="onChangeTCodesInput" placeholder="{i18n>plachldr}" visible="{= ${LocalModel>/chooseFromOption} === 'M' ? true : false}" ></TextArea>
                <core:Icon class="sapUiTinyMarginTop" press="onPressInfoBtn" tooltip="Information" src="sap-icon://information" color="#0854A0" visible="{= ${LocalModel>/chooseFromOption} === 'M' ? true : false}">
                    <core:layoutData>
                        <l:GridData span="XL1 L1 M3 S4" />
                    </core:layoutData>
                </core:Icon>
                <Label />
                <!-- <Button type="Emphasized" text="{i18n>submit}" press="onPressSubmit" enabled="{= ${LocalModel>/chooseFromOption} === 0 ? ${LocalModel>/PastedTcodes} ? true : false : ${LocalModel>/File} ? true : false}">
                    <layoutData>
                        <l:GridData span="XL2 L2 M4 S6" />
                    </layoutData>
                </Button> -->
                
			</form:content>
		</form:SimpleForm>
	</VBox>
    <!-- </Page> -->
</core:FragmentDefinition>