<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog	noDataText="No Data Found"	search=".handleSearch"	confirm=".handleValueHelpClose"	cancel=".handleClose"		items="{path:'/Employee'}">
		<ColumnListItem vAlign="Middle">
			<cells>
			   <Text text="{code}" />
				<Text text="{name}" />             
				<Text text="{email}" />
				<Text text="{team}" />
				
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Code" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Name" />
				</header>
			</Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Email" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Team" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>