{
    "name": "hack2build",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/ux-ui5-tooling": "^1.13.2",
        "@sap/xssec": "^3",
        "axios": "^1.6.8",
        "btoa": "^1.2.1",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.120.9",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-caliberationmaster": "cds watch --open caliberationmaster/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy hack2build --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-labtestform": "cds watch --open labtestform/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "cds": {
        "requires": {
            "auth": "mocked",
            "db": "hana",
            "[production]": {
                "db": "hana",
                "auth": "mocked"
            }
        }
    },
    "sapux": [
        "app/caliberationmaster"
    ]
}
